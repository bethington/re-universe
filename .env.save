                                       # Default: true (recommended for quick start)
                                       # Set to false if using custom schema or manual setup

# =============================================================================
# WEB APPLICATION CONFIGURATION
# =============================================================================

# Django Web Application Settings
GHIDRA_WEB_PORT=8000                   # Web application port
DJANGO_SECRET_KEY=django-insecure-dev-key-change-in-production-f8b2e4a6c9d1 # Django secret key
DJANGO_DEBUG=True                      # Enable debug mode (True for development, False for production)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,10.0.10.30,d2docs.xebyte.com,d2docs.xebyte.us  # Comma-separated list of allowed hostnames

# Reverse Proxy Settings (for nginx, Traefik, Caddy, etc.)
DJANGO_USE_X_FORWARDED_HOST=True       # Set to True if behind reverse proxy
DJANGO_USE_X_FORWARDED_PORT=True       # Set to True if proxy changes ports
DJANGO_SECURE_PROXY_SSL_HEADER=True    # Set to True if proxy terminates SSL/HTTPS
DJANGO_CSRF_TRUSTED_ORIGINS=https://d2docs.xebyte.com,https://d2docs.xebyte.us           # REQUIRED for POST requests behind proxy (Django 4.0+)
                                       # Example: https://ghidra.example.com,https://re.example.com
                                       # Must include full URL with https:// prefix

# =============================================================================
# TRAEFIK CONFIGURATION (Optional)
# =============================================================================

# Traefik Integration - Set TRAEFIK_ENABLE=true to expose via Traefik
TRAEFIK_ENABLE=true                    # Enable Traefik routing
TRAEFIK_HOST=d2docs.xebyte.com,d2docs.xebyte.us         # Your subdomain for the web interface
TRAEFIK_ENTRYPOINT=websecure           # Traefik entrypoint (websecure for HTTPS)
TRAEFIK_CERTRESOLVER=le                # Your Traefik certificate resolver name
TRAEFIK_NETWORK=proxy                  # External Docker network Traefik uses
